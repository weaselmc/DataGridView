<Window x:Class="DGV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DGV"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid HorizontalAlignment="Left" Height="371" Margin="10,10,0,0" VerticalAlignment="Top" Width="772" ItemsSource="{Binding}"/>
        <ComboBox x:Name="StoreIdsCombo" HorizontalAlignment="Left" Margin="534,387,0,0" VerticalAlignment="Top" Width="248" SelectionChanged="StoreIdsCombo_SelectionChanged"/>
        <Label Content="Select Store Id" HorizontalAlignment="Left" Margin="420,387,0,0" VerticalAlignment="Top" />
    </Grid>
</Window>
